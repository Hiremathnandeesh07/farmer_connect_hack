<style>
    .form-container {
        width: 400px;
        margin: 50px auto;
        padding: 30px;
        background-image: linear-gradient(135deg, #388ec4, #7bcee1);
        /* Gradient background */
        border-radius: 10px;
        box-shadow: 0 50px 50px rgba(0, 0, 0, 0.1);
        height: auto;
        padding-top: 10px;
    }

    h1 {
        text-align: center;
        color: white;
        margin-bottom: 20px;
    }

    form {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    label {
        margin-bottom: 20px;
        font-weight: bold;
        color: white;
    }

    .input-container input[type='text'],
    .input-container input[type='number'] {
        padding: 12px;
        margin-top: 5px;
        border: 1px solid #ccc;
        border-radius: 5px;
        width: calc(100% - 3px);
        font-size: 16px;
        box-sizing: border-box;
        margin-bottom: 20px;
    }

    .input::placeholder {
        color: black;
    }

    button {
        padding: 12px 20px;
        margin-top: 20px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s, transform 0.3s;
        font-size: 16px;
    }

    button:hover {
        background-color: #0056b3;
        transform: scale(1.1);
    }

    @media (max-width: 600px) {
        .form-container {
            width: 90%;
        }
    }

    @media (max-width: 600px) {
        .form-wrapper {
            margin: 0 20px;
        }
    }
</style>

<div class="form-wrapper">
    <div class="form-container">
        <h1>Add Details</h1>
        <form action="/sell-form" method="POST">
            <div class="input-container">
                <label>
                    Name:
                    <input type="text" name="name" placeholder="Enter Name" required />
                </label>
                <label>
                    Food to Sell:
                    <input type="text" name="food" placeholder="Food to Sell" required />
                </label>
                <label>
                    Quantity(Kg):
                    <input type="number" name="quantity" placeholder="Quantity" required min="1" />
                </label>
                <label>
                    Price(â‚¹):
                    <input type="number" name="price" placeholder="Per Kg" required min="0.01" step="0.01" />
                </label>
                <label>
                    Contact:
                    <input type="number" name="contact" placeholder="Contact" required />
                </label>
            </div>
            <button type="submit">Submit</button>
        </form>
    </div>
</div>